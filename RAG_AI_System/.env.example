# ---------------------------------------------------------------------------
# api keys
# ---------------------------------------------------------------------------
# required for OpenAI embeddings and LLM
OPENAI_API_KEY=your_openai_api_key_here

# optional - for reranking (improves accuracy)
COHERE_API_KEY=your_cohere_api_key_here

# optional - for Qdrant cloud
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_URL=http://localhost:6333

# ---------------------------------------------------------------------------
# model configuration
# ---------------------------------------------------------------------------
# embedding type: openai, local, cohere
EMBEDDING_TYPE=openai

# models
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
RERANKER_MODEL=rerank-english-v3.0

# ---------------------------------------------------------------------------
# retrieval settings
# ---------------------------------------------------------------------------
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K=10
RERANK_TOP_K=5
SIMILARITY_THRESHOLD=0.7

# ---------------------------------------------------------------------------
# advanced features
# ---------------------------------------------------------------------------
USE_HYDE=false
USE_MULTI_QUERY=true
USE_RERANKING=true
ENABLE_HYBRID_SEARCH=true
BM25_WEIGHT=0.5
USE_MMR=true
MMR_DIVERSITY_SCORE=0.3

# ---------------------------------------------------------------------------
# system settings
# ---------------------------------------------------------------------------
VECTOR_STORE_TYPE=chroma
STREAMING=false
RETURN_SOURCES=true
VERBOSE=false
LOG_LEVEL=INFO
